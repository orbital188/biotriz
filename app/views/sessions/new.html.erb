<% title "Log in" %>

<div class="row">
  <div class="span6 offset3">
    <p>Don't have an account? <%= link_to "Sign up!", '#' %></p>

    <%= form_tag sessions_path, class: "form-horizontal" do %>
      <div class="control-group">
        <%= label_tag :login, nil, class:
            "control-label" %>
        <div class="controls">
          <%= text_field_tag :login, params[:login], placeholder:
              "Username or Email" %>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag :password, nil, class: "control-label" %>
        <div class="controls">
          <%= password_field_tag :password, nil, placeholder:
              "Password" %>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= submit_tag "Log in!", class: "btn btn-large btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
