<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Biotriz", root_path, id: "logo" %>

      <nav>
        <ul class="nav pull-right">
          <li>
            <%= link_to root_path do %>
              <i class="icon-home icon-white"></i> Home
            <% end %>
          </li>
          <% if logged_in? %>
            <li class="dropdown">
              <a data-target="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="icon-th-list icon-white"></i> Tables <b class="caret"></b>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li> <%= link_to "Complexities", complexities_path %> </li>
                <li> <%= link_to "Sizes", sizes_path %> </li>
                <li> <%= link_to "Environments", environments_path %> </li>
              </ul>
            </li>
            <li class="dropdown">
              <a data-target="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="icon-user icon-white"></i> Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li> <%= link_to "Profile", current_user %></li>
                <li class="divider"></li>
                <li> <%= link_to "Logout", logout_path %></li>
              </ul>
            </li>
          <% else %>
            <li> <%= link_to "Login", login_path %></li>
          <% end %>
        </div>
      </nav>
    </div>
  </div>
</header>
