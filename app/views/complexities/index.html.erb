<% title "Complexities" %>

<div class="row">
  <div class="span8 offset2">
    <p><%= link_to "New Complexity", new_complexity_path %></p>

    <%= pagination_for @complexities %>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% for complexity in @complexities %>
          <tr>
            <td><%= complexity.title %></td>
            <td><%= truncate_html(simple_format complexity.description) %></td>
            <%= admin_links complexity %>
          </tr>
        <% end %>
    </table>

    <%= page_entries_info @complexities %>
    <%= pagination_for @complexities %>

    <p><%= link_to "New Complexity", new_complexity_path %></p>
  </div>
</div>
