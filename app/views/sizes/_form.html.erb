<div class="row">
  <div class="span6 offset3">
    <%= form_for @size do |f| %>
      <%= display_error_messages_for f %>
      <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
      </p>
      <p><%= f.submit class: "btn btn-large btn-primary" %></p>
    <% end %>
  </div>
</div>
