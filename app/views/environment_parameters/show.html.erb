<% title "Environment Parameter" %>

<div class="row">
  <div class="span6 offset3">
    <p>
      <strong>Title:</strong>
      <%= @environment_parameter.title %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= simple_format @environment_parameter.description %>
    </p>

    <p>
      <%= link_to "Edit", edit_environment_parameter_path(@environment_parameter) %> |
      <%= link_to "Delete", @environment_parameter, :confirm => 'Are you sure?', :method => :delete %> |
      <%= link_to "View All", environment_parameters_path %>
    </p>
  </div>
</div>
